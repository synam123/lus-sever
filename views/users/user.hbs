<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Người dùng</h1>
    <p class="mb-4">Danh sách tất người dùng trong hệ thống</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Avatar</th>
                            <th style="min-width:200px">Tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Role</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>STT</th>
                            <th>Avatar</th>
                            <th>Tên</th>
                            <th>Tài khoản</th>
                            <th>Số điện thoại</th>
                            <th>Role</th>
                            <th style="width:150px">Ngày tạo</th>
                            <th style="min-width:120px">Trạng thái</th>
                        </tr>
                    </tfoot>
                    <tbody id="myTable">
                        {{#each users}}
                        <tr>
                            <td>{{noNum}}</td>
                            <td>
                                <a href="javascript:;">
                                    <img class="rounded-circle" width="50" height="50"
                                        onerror="this.src='https://image.freepik.com/free-vector/cute-chibi-kawaii-characters_146706-51.jpg';"
                                        src="https://res.cloudinary.com/employeern/image/upload/w_50,h_50,c_fill//{{this.image_path}}" />
                                </a>
                            </td>
                            <td>{{this.user_name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phone}}</td>
                            <td>
                                {{#ifCond this.role_id 2}}
                                Idol
                                {{else}}
                                    {{#ifCond this.role_id 0}}
                                        Admin
                                    {{else}}
                                        User
                                    {{/ifCond}}
                                {{/ifCond}}
                            </td>
                            <td>{{this.created_date}}</td>
                            <td>
                                <a href="/profile" class="btn btn-info btn-sm">Xem</a>
                                <a href="/user/api/delete/{{this._id}}" class="btn btn-danger btn-sm">Xoá</a>
                            </td>
                        </tr>
                        {{!-- <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Thoát?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">Bạn thật sự muốn xóa người dùng ?</div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button"
                                            data-dismiss="modal">Hủy</button>
                                        <a class="btn btn-primary" href="/user/delete/{{this.username}}">Xóa</a>
                                    </div>
                                </div>
                            </div>
                        </div> --}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->