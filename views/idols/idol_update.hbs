<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Thông tin chi tiết</h1>
                        </div>
                        <form class="user" action="/product/update/updating/{{idol._id}}" method="POST"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="text" name="name" class="form-control form-control-user"
                                    value="{{idol.nick_name}}" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="birthday" class="form-control form-control-user"
                                    value="{{idol.email}}" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="address" class="form-control form-control-user"
                                    value="{{idol.address}}" required>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <input type="text" name="productPrice" class="form-control form-control-user"
                                        value="{{idol.services}}" required>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="number" name="productQuantity" class="form-control form-control-user"
                                        value="{{idol.rating}}" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="date" name="productDate" class="form-control form-control-user"
                                    value="{{idol.relationship}}" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="productDescription" class="form-control form-control-user"
                                    value="{{idol.description}}" required>
                            </div>

                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ảnh</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Ảnh</th>
                                    </tr>
                                </tfoot>
                                <tbody id="myTable">
                                    {{#each services}}
                                    <tr>
                                        <td>{{this.service_code}}</td>
                                        <td>{{this.service_price}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>

                            <div class="col-md-12">
                                <label for="customer-img"><b>Thêm ảnh</b></label><br>
                                <input type="file" name="product" id="customer-img" required>
                            </div>
                            <hr>
                            <input class="btn btn-primary btn-user btn-block" type="submit" value="Cập nhật">
                            <a href="/product" class="btn btn-google btn-user btn-block">
                                Trở lại
                            </a>
                        </form>
                        <hr>
                    </div>
                </div>
                <div class="col-lg-5 d-none d-lg-block">
                    <img class="col-lg-12 d-none d-lg-block"
                        src="https://res.cloudinary.com/employeern/image/upload/w_1000,h_2000,c_fill/{{this.avatar}}" />
                </div>
                {{!-- <div class="col-lg-5 d-none d-lg-block bg-register-image"></div> --}}
            </div>
        </div>
    </div>

</div>